<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login5">

    <TextView
        android:id="@+id/tv_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sign up"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:paddingLeft="10dp"
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:hint="Name"
            android:layout_height="50dp"
            android:textColorHint="#E97A45"
            android:background="@drawable/app_truyen_sign_up_border_button"
            app:layout_constraintTop_toBottomOf="@id/tv_sign_up"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="50dp"
            android:textStyle="bold"

            />

        <com.google.android.material.textfield.TextInputEditText
            android:paddingLeft="10dp"
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="#E97A45"
            android:background="@drawable/app_truyen_sign_up_border_button"
            app:layout_constraintTop_toBottomOf="@id/edt_name"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            android:textStyle="bold"
            android:hint="Email"

            />
        <com.google.android.material.textfield.TextInputEditText
            android:paddingLeft="10dp"
            android:id="@id/edt_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="#E97A45"
            android:background="@drawable/app_truyen_sign_up_border_button"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/edt_email"
            android:inputType="textPassword"
            android:textColorLink="@android:color/holo_purple"
            android:textStyle="bold"
            android:hint="Password"/>


    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/edt_pass"
        app:layout_constraintLeft_toLeftOf="@id/edt_pass"
        app:layout_constraintRight_toRightOf="@id/edt_pass"
        android:background="@drawable/app_truyen_sign_up_border_button"
        android:text="Sign up"
        android:textStyle="bold"
        android:textColor="#E97A45"/>


</androidx.constraintlayout.widget.ConstraintLayout>