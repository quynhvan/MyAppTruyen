<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrap_icon_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/iv_movies"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_30"
            android:src="@drawable/ic_movie"
            />
        <TextView
            android:id="@+id/tv_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/iv_movies"
            app:layout_constraintRight_toRightOf="@id/iv_movies"
            app:layout_constraintTop_toBottomOf="@id/iv_movies"
            android:text="Movies"/>

        <ImageView
            android:id="@+id/iv_shows"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_50"
            android:src="@drawable/ic_movie"
            app:layout_constraintLeft_toRightOf="@id/iv_movies" />
        <TextView
            android:id="@+id/tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/iv_shows"
            app:layout_constraintRight_toRightOf="@id/iv_shows"
            app:layout_constraintTop_toBottomOf="@id/iv_shows"
            android:text="Shows"/>

        <ImageView
            android:id="@+id/iv_watchlist"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_50"
            android:src="@drawable/ic_movie"
            app:layout_constraintLeft_toRightOf="@id/iv_shows"

            />
        <TextView
            android:id="@+id/tv_watchlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/iv_watchlist"
            app:layout_constraintRight_toRightOf="@id/iv_watchlist"
            app:layout_constraintTop_toBottomOf="@id/iv_watchlist"
            android:text="WatchList"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_50"
            android:src="@drawable/ic_movie"
            app:layout_constraintLeft_toRightOf="@id/iv_watchlist" />
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/iv_search"
            app:layout_constraintRight_toRightOf="@id/iv_search"
            app:layout_constraintTop_toBottomOf="@id/iv_search"
            android:text="Search"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>